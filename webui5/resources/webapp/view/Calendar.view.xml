<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:unified="sap.ui.unified" xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="calendar-app.webui5.controller.Calendar" displayBlock="true">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<headerContent>
					<Image src="/webapp/img/itelligence.gif" width="200px" />
				</headerContent>
				<content>
					<fb:FilterBar search="onSearch" showFilterConfiguration="false">
						<fb:filterItems>
							<fb:FilterItem name="ResParent" label="Resource Parent" labelTooltip="Resource Parent" mandatory="false">
								<fb:control>
									<ComboBox id="cb3" items="{path: '/ResourceParent'}">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="ResGroup" label="Resource Group" labelTooltip="Resource Group" mandatory="true">
								<fb:control>
									<ComboBox id="cb1" items="{path: '/ResourceGroup'}">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="EmpID" label="Employee ID" labelTooltip="Employee ID" mandatory="false">
								<fb:control>
									<Input type="Text"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="BkType" label="Booking Type" labelTooltip="Booking Type" mandatory="false">
								<fb:control>
									<ComboBox id="cb2" items="{path: '/BookingType'}">
										<core:Item key="{key}" text="{text}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
					<PlanningCalendar id="myCal" rows="{path: '/Employee'}" stickyHeader="true" showWeekNumbers="true"
						appointmentSelect="handleAppointmentSelect" viewKey="Day">
						<rows>
							<PlanningCalendarRow title="{EMPNAME}" appointments="{path: 'Booking', templateShareable: 'true'}"
								tooltip="{EMPRESOURCEGROUP}">
								<appointments>
									<unified:CalendarAppointment startDate="{BKSTARTDATETIME}" endDate="{BKENDDATETIME}" title="{BKCUSTOMERNAME}"
										tooltip="{BKWBS} {BKWBSDESC}"></unified:CalendarAppointment>
								</appointments>
							</PlanningCalendarRow>
						</rows>
					</PlanningCalendar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>