<core:FragmentDefinition
		xmlns="sap.ui.comp.valuehelpdialog"
		xmlns:m="sap.m"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:core="sap.ui.core">
	<ValueHelpDialog
			title="Employee"
			ok="onValueHelpOkPress"
			cancel="onValueHelpCancelPress"
			afterClose="onValueHelpAfterClose"
			supportMultiselect="false"
			key="EMPNAME"
			descriptionKey="EMPID"
	>
		<filterBar>
			<fb:FilterBar advancedMode="true" search="onFilterBarSearch">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="EMPID"
							label="Employee ID"
							visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input id="inputEmpId"
									 name="EMPID"
									 showSuggestion="true"
									 showValueHelp="false"
									 suggestionItems="{
										path: '/Employee',
										sorter: { path: 'EMPID' }
									}"
							>
								<core:Item key="{EMPID}" text="{EMPID}" />
							</m:Input>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="EMPNAME"
							label="Employee Name"
							visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input id="inputEmpName"
									 name="EMPNAME"
									 showSuggestion="true"
									 showValueHelp="false"
									 suggestionItems="{
										path: '/Employee',
										sorter: { path: 'EMPNAME' }
									}"
							>
								<core:Item key="{EMPNAME}" text="{EMPNAME}" />
							</m:Input>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>

